// Renovate packageRules for GitHub Actions dependencies.
// This file is intended to be referenced by downstream repositories for consistent update grouping.
{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    // Group allowlisted GitHub Actions orgs (explicitly disable pinning)
    {
      "description": "Group allowlisted orgs (actions/, docker/, github/, etc.)",
      "groupName": "github actions allowlisted orgs",
      "groupSlug": "github-actions-allowlisted",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump",
        "replacement"
      ],
      "matchPackageNames": [
        "^actions/",
        "^aquasecurity/",
        "^aws-actions/",
        "^azure/",
        "^codecov/",
        "^coverallsapp/",
        "^docker/",
        "^github/",
        "^google-github-actions/",
        "^hashicorp/",
        "^helm/",
        "^sonarsource/"
      ],
      "pinDigests": false
    },
    // Group all other GitHub Actions dependencies (pinned with SHA digests for security)
    {
      "description": "Group all other GitHub Actions dependencies (pinned)",
      "groupName": "github actions other dependencies",
      "groupSlug": "github-actions-other",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump",
        "replacement"
      ],
      "matchPackageNames": [
        "!^actions/",
        "!^aquasecurity/",
        "!^aws-actions/",
        "!^azure/",
        "!^codecov/",
        "!^coverallsapp/",
        "!^docker/",
        "!^github/",
        "!^google-github-actions/",
        "!^hashicorp/",
        "!^helm/",
        "!^sonarsource/"
      ],
      "pinDigests": true
    }
    // Add additional rules below as needed
  ]
}
