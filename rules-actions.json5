// Renovate packageRules for GitHub Actions dependencies.
// This file is intended to be referenced by downstream repositories for consistent update grouping.
{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    // Group trusted GitHub Actions orgs (no pinning required)
    // These orgs are considered safe and don't need SHA pinning
    {
      "description": "Group trusted GitHub Actions orgs (actions/, docker/, github/)",
      "groupName": "github actions (trusted)",
      "groupSlug": "github-actions-trusted",
      "matchManagers": [
        "github-actions"
      ],
      "matchPackageNames": [
        "^actions/",
        "^docker/",
        "^github/"
      ]
    },
    // Group other GitHub Actions (with SHA pinning for security)
    // Third-party actions require SHA digests for supply chain security
    {
      "description": "Group other GitHub Actions (pinned for security)",
      "groupName": "github actions (other)",
      "groupSlug": "github-actions-other",
      "matchManagers": [
        "github-actions"
      ],
      "matchPackageNames": [
        "!^actions/",
        "!^docker/",
        "!^github/"
      ],
      "pinDigests": true
    }
    // Add additional rules below as needed
  ]
}
