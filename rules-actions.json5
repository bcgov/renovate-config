// Renovate packageRules for GitHub Actions dependencies.
// This file is intended to be referenced by downstream repositories for consistent update grouping.
{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    // Group all GitHub Actions dependencies into a single unified PR
    // This provides better overview and reduces PR noise
    {
      "description": "Group all GitHub Actions dependencies for unified update PRs",
      "groupName": "github actions",
      "groupSlug": "github-actions",
      "matchManagers": [
        "github-actions"
      ]
    },
    // Pin ALL GitHub Actions with SHA digests for supply chain security
    // This is the base security policy - pin everything by default
    {
      "description": "Pin all GitHub Actions with SHA digests for supply chain security",
      "matchManagers": [
        "github-actions"
      ],
      "pinDigests": true
    },
    // Unpin digests (remove SHAs) for trusted orgs only
    // Trusted orgs (actions/, docker/, github/) are safe to use version tags
    {
      "description": "Unpin digests for trusted GitHub Actions orgs (actions/, docker/, github/)",
      "matchManagers": [
        "github-actions"
      ],
      "matchPackageNames": [
        "^actions/",
        "^docker/",
        "^github/"
      ],
      "pinDigests": false
    }
    // Add additional rules below as needed
  ]
}
