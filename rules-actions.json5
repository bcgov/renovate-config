// Renovate packageRules for GitHub Actions dependencies.
// This file is intended to be referenced by downstream repositories for consistent update grouping and digest handling.
{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    // ALLOWLISTED_ORGS: actions/, docker/, github/
    // These trusted orgs are unpinned (no SHA digests) for easier maintenance
    // Group and unpin digests for the allowlisted actions and github orgs
    {
      "description": "Group and unpin digests for allowlisted orgs (actions/, docker/, github/)",
      "groupName": "github actions allowlisted orgs",
      "groupSlug": "github-actions-allowlisted",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump",
        "replacement"
      ],
      "pinDigests": false,
      "matchPackageNames": [
        "/^actions\\//",  // GitHub's official actions
        "/^docker\\//",   // Docker's official actions
        "/^github\\//"    // GitHub's other official actions
      ]
    },
    // Group all other GitHub Actions dependencies (pinned with SHA digests for security)
    // Uses negative lookahead to exclude the allowlisted orgs above
    {
      "description": "Group all other GitHub Actions dependencies (pinned)",
      "groupName": "github actions other dependencies",
      "groupSlug": "github-actions-other",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin",
        "pinDigest",
        "digest",
        "lockFileMaintenance",
        "rollback",
        "bump",
        "replacement"
      ],
      "matchPackageNames": [
        "/^(?!actions\\/|docker\\/|github\\/).*/"  // Everything except allowlisted orgs
      ]
    },
    // Do not pin digests for service containers in GitHub Actions workflows
    {
      "description": "Do not pin digests for service containers (Docker images) in GitHub Actions workflows",
      "matchManagers": ["github-actions"],
      "matchDepTypes": ["container"],
      "pinDigests": false
    }
    // Add additional rules below as needed
  ]
}
