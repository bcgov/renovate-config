// Renovate packageRules for GitHub Actions dependencies.
// This file is intended to be referenced by downstream repositories for consistent update grouping.
{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    // Group all GitHub Actions dependencies together
    // Simplifies maintenance by treating all actions equally
    {
      "description": "Group all GitHub Actions dependencies",
      "groupName": "github actions",
      "groupSlug": "github-actions",
      "matchManagers": [
        "github-actions"
      ]
    }
    // Add additional rules below as needed
  ]
}
