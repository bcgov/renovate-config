// Renovate packageRules for GitHub Actions dependencies.
// This file is intended to be referenced by downstream repositories for consistent update grouping.
{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    // Group all GitHub Actions dependencies into a single unified PR
    {
      "description": "Group all GitHub Actions dependencies for unified update PRs",
      "groupName": "github actions",
      "groupSlug": "github-actions",
      "matchManagers": [
        "github-actions"
      ]
    },
    // Pin third-party GitHub Actions with SHA digests for supply chain security
    {
      "description": "Pin third-party GitHub Actions with SHA digests (excludes trusted orgs)",
      "matchManagers": [
        "github-actions"
      ],
      "matchPackageNames": [
        "!^actions/",
        "!^aquasecurity/",
        "!^aws-actions/",
        "!^azure/",
        "!^codecov/",
        "!^coverallsapp/",
        "!^docker/",
        "!^github/",
        "!^google-github-actions/",
        "!^hashicorp/",
        "!^helm/",
        "!^sonarsource/"
      ],
      "pinDigests": true
    },
    // Disable digest pinning for trusted GitHub Actions orgs (overrides above rule)
    {
      "description": "Disable digest pinning for trusted GitHub Actions orgs",
      "matchManagers": [
        "github-actions"
      ],
      "matchPackageNames": [
        "^actions/",
        "^aquasecurity/",
        "^aws-actions/",
        "^azure/",
        "^codecov/",
        "^coverallsapp/",
        "^docker/",
        "^github/",
        "^google-github-actions/",
        "^hashicorp/",
        "^helm/",
        "^sonarsource/"
      ],
      "pinDigests": false
    }
    // Add additional rules below as needed
  ]
}
