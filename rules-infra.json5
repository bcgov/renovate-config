// Renovate packageRules for GitHub Actions dependencies.
// This file is intended to be referenced by downstream repositories for consistent update grouping.
{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    // ALLOWLISTED_ORGS: actions/, docker/, github/
    // These trusted orgs are grouped for easier maintenance
    // Group all GitHub Actions together (default unpinned)
    {
      "description": "Group all GitHub Actions together",
      "groupName": "github actions",
      "groupSlug": "github-actions",
      "matchManagers": [
        "github-actions"
      ]
    },
    // Pin non-allowlisted GitHub Actions (override default)
    {
      "description": "Pin non-allowlisted GitHub Actions for security",
      "groupName": "github actions",
      "groupSlug": "github-actions",
      "matchManagers": [
        "github-actions"
      ],
      "matchPackageNames": [
        "!^actions/",
        "!^docker/",
        "!^github/"
      ],
      "pinDigests": true
    },
    {
      "description": "Group infrastructure providers: Combine Terraform, Docker, Kubernetes, Helm, and Docker Compose updates into single PRs. Infrastructure changes should be reviewed together for consistency.",
      "matchManagers": [
        "terraform",
        "dockerfile",
        "kubernetes",
        "helmv3",
        "docker-compose"
      ],
      "groupName": "infrastructure updates",
      "groupSlug": "infra"
    }
  ]
}
