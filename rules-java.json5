{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  // Group Java dependencies for unified update PRs and easier management
  "packageRules": [
    // Group all springframework dependencies
    {
      "description": "Group springframework",
      "groupName": "springframework",
      "matchPackageNames": ["/^org\\.springframework/", "/^spring-/"]
    },
    // Group jackson (JSON processing) dependencies
    {
      "description": "Group jackson",
      "groupName": "jackson",
      "matchPackageNames": ["/^com\\.fasterxml\\.jackson/", "/^jackson-/"]
    },
    // Group junit (testing framework) dependencies
    {
      "description": "Group junit",
      "groupName": "junit",
      "matchPackageNames": ["/^org\\.junit/", "/^junit/"]
    },
    // Group mockito (mocking framework) dependencies
    {
      "description": "Group mockito",
      "groupName": "mockito",
      "matchPackageNames": ["/^org\\.mockito/", "/^mockito-/"]
    },
    // Group all non-major Java dependencies
    {
      "groupName": "java all non-major dependencies",
      "groupSlug": "java all-minor-patch",
      "matchManagers": [
        "gradle",
        "maven"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "lockFileMaintenance"
      ]
    },
    // Pin Java dependencies for supply chain security
    {
      "description": "Pin Java digests/SHAs for supply chain security. Ensures reproducible builds and prevents dependency substitution attacks.",
      "matchManagers": [
        "gradle",
        "maven"
      ],
      "pinDigests": true
    }
    // Add more grouping rules as needed for your Java ecosystem
  ]
}
