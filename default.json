{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "configMigration": true,
  "dependencyDashboard": true,
  "description": "Default preset for use with Renovate's repos. Main Renovate configuration preset for downstream repositories. Extends shared and language-specific rules.",
  "extends": [
    "config:recommended",
    "docker:disableMajor",
    "group:allNonMajor",
    "group:definitelyTyped",
    "group:linters",
    "group:monorepos",
    "group:react",
    "group:recommended",
    ":automergeDigest",
    ":automergeLinters",
    ":automergeMinor",
    ":automergePatch",
    ":automergePr",
    ":automergeRequireAllStatusChecks",
    ":automergeTypes",
    ":combinePatchMinorReleases",
    ":enableVulnerabilityAlerts",
    ":maintainLockFilesMonthly",
    ":preserveSemverRanges",
    ":rebaseStalePrs",
    ":semanticCommits",
    ":semanticCommitScope(deps)",
    "github>bcgov/renovate-config:rules-actions.json5",
    "github>bcgov/renovate-config:rules-java.json5",
    "github>bcgov/renovate-config:rules-javascript.json5",
    "github>bcgov/renovate-config:rules-python.json5"
  ],
  "forkProcessing": "enabled",
  "ignorePresets": [
    ":ignoreModulesAndTests"
  ],
  "minimumReleaseAge": "7 days",
  "onboarding": true,
  "platform": "github",
  "platformAutomerge": true,
  "prConcurrentLimit": 2,
  "pinDigests": true,
  "recreateWhen": "never",
  "packageRules": [
    {
      "description": "Exclude GitHub Actions from pinDigests for actions and github orgs. Also unpin existing digests for these actions.",
      "groupSlug": "github-actions-unpin-digests",
      "pinDigests": false,
      "matchManagers": [
        "github-actions"
      ],
      "matchPackageNames": [
        "/^actions\\//",
        "/^github\\//"
      ],
      "matchUpdateTypes": [
        "digest",
        "pinDigest"
      ]
    },
    {
      "description": "Block prerelease updates globally (alpha, beta, rc, next, preview, dev, experimental)",
      "groupSlug": "block-prerelease-globally",
      "enabled": false,
      "matchCurrentVersion": ".*-(alpha|beta|rc|next|preview|dev|experimental).*"
    },
    {
      "description": "Do not pin digests for Dockerfiles, and unpin existing digests.",
      "groupSlug": "dockerfile-unpin-digests",
      "pinDigests": false,
      "matchManagers": [
        "dockerfile"
      ],
      "matchUpdateTypes": [
        "digest",
        "pinDigest"
      ]
    }
  ]
}
