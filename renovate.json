{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default preset for use with Renovate's repos",
  "extends": [
    "config:recommended",
    ":combinePatchMinorReleases",
    ":enableVulnerabilityAlerts",
    ":maintainLockFilesMonthly",
    ":preserveSemverRanges",
    ":rebaseStalePrs",
    ":semanticCommits",
    ":semanticCommitScope(deps)",
    "docker:disableMajor",
    "group:allNonMajor",
    "group:definitelyTyped",
    "group:linters",
    "group:monorepos",
    "group:react",
    "group:recommended"
  ],
  "onboarding": true,
  "platform": "github",
  "forkProcessing": "disabled",
  "configMigration": true,
  "dependencyDashboard": true,
  "prCreation": "not-pending",
  "rebaseWhen": "behind-base-branch",
  "repositories": [
    "bcgov/nr-fam-idim-lookup-proxy",
    "bcgov/nr-fom",
    "bcgov/nr-forest-client",
    "bcgov/nr-forest-client-api",
    "bcgov/nr-forests-access-management",
    "bcgov/nr-old-growth",
    "bcgov/nr-oracle-service",
    "bcgov/nr-renovate",
    "bcgov/nr-results-exam",
    "bcgov/nr-rfc-grib-copy",
    "bcgov/nr-rfc-processing",
    "bcgov/nr-silva",
    "bcgov/nr-spar",
    "bcgov/onroutebc",
    "bcgov/pubcode",
    "bcgov/quickstart-openshift",
    "bcgov/quickstart-openshift-backends",
    "bcgov-nr/action-builder-ghcr",
    "bcgov-nr/action-deployer-openshift",
    "bcgov-nr/action-pr-description-add",
    "bcgov-nr/action-test-and-analyse",
    "bcgov-nr/action-test-and-analyse-java"
  ],
  "prConcurrentLimit": 3,
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github actions all dependencies",
      "groupSlug": "github actions all",
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Py - group boto",
      "groupName": "boto",
      "matchPackagePatterns": [
        "^boto3$",
        "^botocore$"
      ],
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Py - group pytest",
      "groupName": "pytest",
      "matchPackagePatterns": [
        "^pytest$",
        "^pytest-"
      ],
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Py - group sqlalchemy",
      "groupName": "sqlalchemy",
      "matchPackagePatterns": [
        "^sqlalchemy$",
        "^sqlmodel$",
        "^sqlacodegen$",
        "^mock-alchemy$"
      ],
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "JS - group vite",
      "groupName": "vite",
      "matchPackagePatterns": [
        "^vite$",
        "^@vitejs\\/"
      ],
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "JS - group linters",
      "groupName": "linters",
      "matchPackagePatterns": [
        "eslint",
        "^@prettier\\/",
        "^prettier-plugin-"
      ]
    },
    {
      "description": "JS - group @angular",
      "groupName": "angular",
      "matchPackagePatterns": [
        "^@angular\\/",
        "^@angular-devkit\\/",
        "^@angular-eslint\\/"
      ]
    },
    {
      "description": "JS - group @testing-library",
      "groupName": "testing-library",
      "matchPackagePatterns": [
        "^@testing-library\\/"
      ]
    },
    {
      "description": "JS - group @nestjs",
      "groupName": "nestjs",
      "matchPackagePatterns": [
        "^@nestjs\\/",
        "nest-winston"
      ]
    },
    {
      "description": "One week stability period for npm packages",
      "matchDatasources": [
        "npm"
      ],
      "minimumReleaseAge": "7 days"
    },
    {
      "matchManagers": [
        "maven"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "lockFileMaintenance"
      ],
      "groupName": "maven all non-major dependencies",
      "groupSlug": "maven all-minor-patch",
      "minimumReleaseAge": "3 days"
    }
  ],
  "pre-commit": {
    "pinDigests": false
  }
}
